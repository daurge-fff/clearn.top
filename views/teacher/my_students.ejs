<div class="container">
    <div class="page-header">
        <h1>My Students</h1>
    </div>

    <% if (students && students.length > 0) { %>
        <div class="users-grid">
            <div class="users-grid">
                <% if (students && students.length > 0) { %>
                    <% students.forEach(student => { %>
                        <div class="user-card">
                            <div class="user-card-header">
                                <div class="user-avatar">
                                    <% if (student.emojiAvatar) { %>
                                        <img src="https://emojicdn.elk.sh/<%= encodeURIComponent(student.emojiAvatar) %>?style=apple" alt="Avatar" class="emoji-avatar-img">
                                    <% } else { %>
                                        <span><%= student.name.charAt(0) %></span>
                                    <% } %>
                                </div>
                                <div class="user-info">
                                    <a href="/dashboard/student/<%= student._id %>" class="user-name link-discreet"><%= student.name %></a>
                                    <span class="user-role status-<%= student.status %>"><%= student.status %></span>
                                </div>
                            </div>
                            <div class="user-card-body">
                                <div class="info-item">
                                    <i class="icon-list"></i>
                                    <span>Balance: <strong><%= student.lessonsPaid %> lessons</strong></span>
                                </div>
                                <% if (student.contact) { %>
                                    <div class="info-item">
                                        <i class="icon-contact"></i>
                                        <span><%= student.contact %></span>
                                    </div>
                                <% } %>
                                <div class="info-item">
                                    <i class="icon-email"></i>
                                    <span><%= student.email %></span>
                                </div>
                            </div>
                            <div class="user-card-footer">
                                <a href="/dashboard/student/<%= student._id %>" class="btn btn-primary" style="width: 100%;">View Profile</a>
                            </div>
                            <div class="user-card-footer">
                                <span>Lessons Balance:</span>
                                <span class="lessons-balance"><%= student.lessonsPaid %></span>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>You have no students assigned to you yet.</p>
                <% } %>
            </div>
            </div>
        </div>
    <% } else { %>
        <div class="card">
            <div class="empty-state">
                <div class="empty-state-icon"><i class="icon-users"></i></div>
                <h3>No Students Assigned</h3>
                <p>You don't have any students assigned to you yet. Please contact the administrator.</p>
            </div>
        </div>
    <% } %>
</div>