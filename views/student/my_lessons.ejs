<div class="container">
<div class="page-header">
    <h1>My Lessons</h1>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <h3>Lessons Paid</h3>
        <p class="stat-number"><%= user.lessonsPaid %></p>
        <span class="stat-desc">Remaining lessons on your balance</span>
    </div>
</div>

<div class="card">
    <h2>All Lessons List</h2>
    <% if (lessons && lessons.length > 0) { %>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Teacher</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% lessons.forEach(lesson => { %>
                        <tr>
                            <td>
                                <a href="/dashboard/lessons/view/<%= lesson._id %>" class="link-discreet">
                                    <%= lesson.course.name %>
                                </a>
                            </td>
                            <td><%= lesson.teacher.name %></td>
                            <td><%= new Date(lesson.lessonDate).toLocaleString('en-GB', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                            <td><span class="badge status-<%= lesson.status %>"><%= lesson.status.replace(/_/g, ' ') %></span></td>
                            <td class="actions-cell <%= (lesson.status !== 'scheduled') ? 'is-empty' : '' %>">
                                <% if (lesson.status === 'scheduled') { %>
                                    <form action="/dashboard/lessons/cancel/<%= lesson._id %>" method="POST" style="display: inline;">
                                        <button type="submit" 
                                                class="btn-icon btn-danger" 
                                                data-tooltip="Cancel Lesson" 
                                                onclick="return confirm('Are you sure you want to cancel this lesson? This action cannot be undone and a lesson credit will be returned to your balance.');">
                                            <i class="icon-delete"></i>
                                        </button>
                                    </form>
                                <% } else { %>
                                    
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="empty-state">
            <div class="empty-state-icon"><i class="icon-inbox"></i></div>
            <h3>No Lessons Found</h3>
            <p>You don't have any scheduled or past lessons. Please contact your teacher or administrator.</p>
        </div>
    <% } %>
</div>