<h1>Add New User</h1>
<div class="container">
<div class="card form-card">
    <form action="/dashboard/users/add" method="POST">
        <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Initial Password</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="form-group">
            <label for="contact">Contact (Telegram, etc.)</label>
            <input type="text" id="contact" name="contact">
        </div>
        <div class="form-group">
            <label for="role">Role</label>
            <select id="role" name="role" onchange="toggleStudentFields()">
                <option value="student" selected>Student</option>
                <option value="teacher">Teacher</option>
                <option value="admin">Admin</option>
            </select>
        </div>
        <div id="student-fields">
            <div class="form-group">
                <label for="lessonsPaid">Number of Paid Lessons</label>
                <input type="number" id="lessonsPaid" name="lessonsPaid" value="0">
            </div>
            <div class="form-group">
                <label for="stars">Number of Stars</label>
                <input type="number" id="stars" name="stars" value="0">
            </div>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Create User</button>
            <a href="/dashboard/users" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
</div>

<script>
    function toggleStudentFields() {
        const role = document.getElementById('role').value;
        const studentFields = document.getElementById('student-fields');
        if (role === 'student') {
            studentFields.style.display = 'block';
        } else {
            studentFields.style.display = 'none';
        }
    }
    
    // Remember contact input
    document.addEventListener('DOMContentLoaded', function() {
        const contactInput = document.getElementById('contact');
        
        // Load saved contact on page load
        const savedContact = localStorage.getItem('lastUserContact');
        if (savedContact) {
            contactInput.value = savedContact;
        }
        
        // Save contact on input change
        contactInput.addEventListener('input', function() {
            if (this.value.trim()) {
                localStorage.setItem('lastUserContact', this.value);
            }
        });
    });
    
    toggleStudentFields();
</script>