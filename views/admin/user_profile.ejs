<div class="container profile-page-container">
    <div class="page-header profile-header">
        <div class="profile-info-block">
            <div class="user-avatar header-avatar">
                <% if (userProfile.emojiAvatar) { %>
                    <img src="https://emojicdn.elk.sh/<%= encodeURIComponent(userProfile.emojiAvatar) %>?style=apple" alt="Avatar" class="emoji-avatar-img">
                <% } else { %>
                    <span><%= userProfile.name.charAt(0) %></span>
                <% } %>
            </div>
            <div class="header-title-block">
                <h1><%= userProfile.name %></h1>
                <p class="section-subtitle">User Profile</p>
            </div>
        </div>

        <div class="page-actions">
            <a href="/dashboard/users/edit/<%= userProfile._id %>" class="btn btn-secondary"><i class="icon-edit"></i> Edit User</a>
            <a href="/dashboard/users" class="btn btn-secondary">Back to All Users</a>
        </div>

    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-number small"><%= userProfile.email %></span>
                <span class="stat-label">Email</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-info">
                <span class="stat-number small"><span class="badge role-<%= userProfile.role %>"><%= userProfile.role %></span></span>
                <span class="stat-label">Role</span>
            </div>
        </div>
        <% if (userProfile.role === 'student') { %>
            <div class="stat-card">
                <div class="stat-info">
                    <span class="stat-number"><%= userProfile.lessonsPaid %></span>
                    <span class="stat-label">Lessons Balance</span>
                </div>
            </div>
        <% } %>
    </div>

    <% if (userProfile.role === 'student') { %>
        <div class="card">
            <h2>Manual Payment Registration</h2>
            <form action="/dashboard/user-profile/<%= userProfile._id %>/register-payment" method="POST" class="adjustment-form">
                <div class="form-group">
                    <label for="lessonsPurchased">Lessons Purchased</label>
                    <input type="number" name="lessonsPurchased" placeholder="e.g., 10" required>
                </div>
                <div class="form-group">
                    <label for="amountPaid">Amount Paid (EUR)</label>
                    <input type="number" step="0.01" name="amountPaid" placeholder="e.g., 180" required>
                </div>
                <div class="form-group reason-group">
                    <label for="paymentSystem">Payment Method / Reason</label>
                    <input type="text" name="paymentSystem" placeholder="e.g., Direct Bank Transfer, Cash" required>
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Register Payment</button>
                </div>
            </form>
        </div>
    <% } %>

    <div class="card">
        <h2>Lesson History</h2>
        <div class="table-responsive">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th><%= userProfile.role === 'student' ? 'Teacher' : 'Student' %></th>
                        <th>Topic</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (lessons && lessons.length > 0) { %>
                        <% lessons.forEach(lesson => { %>
                            <tr>
                                <td><%= new Date(lesson.lessonDate).toLocaleString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' }) %></td>
                                <td><%= userProfile.role === 'student' ? lesson.teacher.name : lesson.student.name %></td>
                                <td><%= lesson.topic %></td>
                                <td><span class="badge status-<%= lesson.status %>"><%= lesson.status.replace(/_/g, ' ') %></span></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 20px;">No lesson history found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>