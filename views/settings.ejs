<div class="page-header">
    <h1>Settings</h1>
</div>

<form action="/dashboard/settings" method="POST">
    <div class="settings-grid">
        <div class="card settings-card">
            <div class="card-icon-header">
                <i class="icon-users"></i>
                <h3>Profile</h3>
            </div>
            <p class="section-subtitle">This information will be displayed to other users.</p>
            
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" required>
            </div>
        </div>

        <div class="card settings-card">
            <div class="card-icon-header">
                <i class="icon-key"></i>
                <h3>Security</h3>
            </div>
            <p class="section-subtitle">Manage your account security settings.</p>

            <div class="form-group">
                <label for="password">New Password</label>
                <div class="password-wrapper">
                    <input type="password" id="password" name="password" placeholder="Leave blank to keep current">
                    <button type="button" class="password-toggle"><i class="icon-eye"></i><i class="icon-eye-off"></i></button>
                </div>
            </div>
        </div>

        <div class="card settings-card">
            <div class="card-icon-header">
                <i class="icon-calendar"></i>
                <h3>Time Zone</h3>
            </div>
            <p class="section-subtitle">Select your time zone for accurate scheduling and notifications.</p>

            <div class="form-group">
                <label for="timeZone">Time Zone</label>
                <select id="timeZone" name="timeZone" required>
                <% timeZones.forEach(group => { %>
                    <optgroup label="<%= group.label %>">
                        <% group.zones.forEach(tz => { %>
                            <option value="<%= tz.value %>" <%= user.timeZone === tz.value ? 'selected' : '' %>><%= tz.label %></option>
                        <% }); %>
                    </optgroup>
                <% }); %>
            </select>
            </div>
        </div>

        <div class="card settings-card">
            <div class="card-icon-header">
                <i class="icon-telegram"></i>
                <h3>Telegram Integration</h3>
            </div>
            <p class="section-subtitle">Connect your Telegram account and manage notifications.</p>

            <div class="form-group">
                <label for="telegramChatId">Telegram Chat ID</label>
                <input type="text" id="telegramChatId" name="telegramChatId" value="<%= user.telegramChatId || '' %>" placeholder="Enter your Telegram Chat ID">
            </div>
            <div class="form-group">
                <label class="checkbox-label" for="lessonReminders">
                    <div class="custom-checkbox">
                        <input type="checkbox" id="lessonReminders" name="notifications[lessonReminders]" <%= user.notifications && user.notifications.lessonReminders ? 'checked' : '' %>>
                        <span class="checkmark"></span>
                    </div>
                    <span>Receive lesson reminders via Telegram</span>
                </label>
            </div>
        </div>

        
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>