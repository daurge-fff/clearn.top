<div class="page-header">
    <h1>Settings</h1>
</div>

<form action="/dashboard/settings" method="POST">
    <div class="settings-grid">
        <div class="card settings-card">
            <div class="card-icon-header">
                <i class="icon-users"></i>
                <h3>Profile</h3>
            </div>
            <p class="section-subtitle">This information will be displayed to other users.</p>
            
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" required>
            </div>
        </div>

        <div class="card settings-card">
            <div class="card-icon-header">
                <i class="icon-key"></i>
                <h3>Security</h3>
            </div>
            <p class="section-subtitle">Manage your account security settings.</p>

            <div class="form-group">
                <label for="password">New Password</label>
                <div class="password-wrapper">
                    <input type="password" id="password" name="password" placeholder="Leave blank to keep current">
                    <button type="button" class="password-toggle"><i class="icon-eye"></i><i class="icon-eye-off"></i></button>
                </div>
            </div>
        </div>

        <div class="card settings-card full-width-card">
            <div class="card-icon-header">
                <i class="icon-bell"></i>
                <h3>Notifications & Integrations</h3>
            </div>
            <p class="section-subtitle">Connect your accounts to receive important updates.</p>
            
            <div class="form-group">
                <label for="telegramChatId">Your Telegram Chat ID</label>
                <input type="text" id="telegramChatId" name="telegramChatId" value="<%= user.telegramChatId || '' %>" placeholder="Get it from @CodeLearnHelperBot">
                <p class="form-hint">Start a chat with our bot to get your ID.</p>
            </div>
            <label class="checkbox-label">
                <input type="checkbox" name="notifications[lessonReminders]" <%= (user.notifications && user.notifications.lessonReminders) ? 'checked' : '' %>>
                <span class="custom-checkbox"><i class="icon-check"></i></span>
                <span>Receive reminders about upcoming lessons</span>
            </label>
        </div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>