<div class="container">
    <div class="page-header">
        <h1>Settings</h1>
    </div>
    <div class="card form-card">
        <form action="/dashboard/settings" method="POST">
            <div class="form-group">
                <label for="name">Your Name</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" required>
            </div>
            <div class="form-group">
                <label for="password">New Password</label>
                <input type="password" name="password" placeholder="Leave blank to keep current password">
            </div>
            <hr style="margin: 30px 0; border-color: var(--card-border);">
            <h3>Telegram Notifications</h3>
            <div class="form-group">
                <label for="telegramChatId">Your Telegram Chat ID</label>
                <input type="text" id="telegramChatId" name="telegramChatId" value="<%= user.telegramChatId || '' %>" placeholder="Get it from @CodeLearnHelperBot">
                <p class="form-hint">To receive notifications, start a chat with our bot and enter the Chat ID it provides.</p>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Settings</button>
            </div>
        </form>
    </div>
</div>